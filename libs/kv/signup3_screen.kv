#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex


<SignUp3Screen>
    canvas:
        Color:
            rgba: gch("33333d")
            # rgba: gch("191414")
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        spacing: dp(80)
        padding: dp(30)
        pos_hint: {"center_x": .5}

	    MDBoxLayout:
	        adaptive_height: True
	        orientation: "vertical"
	        spacing: dp(20)

			BoxLayout:
				orientation: 'horizontal'
				Image:
					source: f"{environ['RALLY_ROOT']}/assets/images/stepsToken1.png"
					size_hint_y: None  
					height: dp(200)
				Image:
					source: f"{environ['RALLY_ROOT']}/assets/images/stepsToken2.png"
					size_hint_y: None  
					height: dp(200)
				
	        RallyTextField:
				id: tk
				focus: True
	            hint_text: "Token"

			RallyTextField:
				id: hu
				focus: True
	            hint_text: "Homepage URL"
			
			MDFillRoundFlatButton:
				text: "Sign Up"
				font_size: 18
				text_color: 1, 1, 1, 1
				on_release: root.validate()

	    MDBoxLayout:
	        adaptive_height: True
	        orientation: "vertical"
	        spacing: dp(20)


	        MDTextButton:
	        	text: "Already have an account? Log In"
	        	pos_hint: {"center_x": .5}
				on_release: root.parent.current = "rally register screen"


<RallyTextField@MDTextField>
    mode: 'fill'
    line_anim: False
    fill_color: (0, 0, 0, .4)