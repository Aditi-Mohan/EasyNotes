#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex


<SignUpScreen>
    canvas:
        Color:
            rgba: gch("33333d")
            # rgba: gch("191414")
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        spacing: dp(80)
        padding: dp(30)
        pos_hint: {"center_x": .5}


	    MDBoxLayout:
	        adaptive_height: True
	        orientation: "vertical"
	        spacing: dp(20)

	        RallyTextField:
				id: nm
				focus: True
	            hint_text: "Username"
			
			RallyTextField:
				id: em
				focus: True
	            hint_text: "Email"
			
			RallyTextField:
				id: pw
	            hint_text: "Password"
	            password: True
	            password_mask: "*"

	        RallyTextField:
				id: cpw
	            hint_text: "Confirm Password"
	            password: True
	            password_mask: "*"

			MDFillRoundFlatButton:
				text: "Continue"
				font_size: 18
				text_color: 1, 1, 1, 1
				on_release:
					if root.validate(): \
					root.parent.current = "rally signup2 screen"  

	    MDBoxLayout:
	        adaptive_height: True
	        orientation: "vertical"
	        spacing: dp(5)


	        MDTextButton:
	        	text: "Already have an account? Log In"
	        	pos_hint: {"center_x": .5}
				on_release: root.parent.current = "rally register screen"


<RallyTextField@MDTextField>
    mode: 'fill'
    line_anim: False
    fill_color: (0, 0, 0, .4)