<SaveFile>:
    FloatLayout:
        orientation: 'vertical'

        MDTextField:
            id: file_name
            hint_text: 'File Name'
            size_hint_x: 0.8           
            pos_hint: {'x': 0.1, 'y': 0.7}
        
        Spinner:
            id: units
            text: 'Select Unit'
            values: root.options
            on_text: root.select_unit(units.text)
            size_hint: (0.2, 0.15)
            pos_hint: {'x': 0.1, 'y': 0.55}

        MDFillRoundFlatIconButton:
            icon: 'check'
            text: 'Finish'
            pos: self.parent.size[0]*0.4, self.parent.size[1]*0.9
            on_release: root.pre_save('save')

        MDFillRoundFlatIconButton:
            icon: 'bookmark-plus'
            text: 'Next  '
            disabled: root.disable_bm
            pos: self.parent.size[0]*0.7, self.parent.size[1]*0.9
            on_release: root.pre_save('next')
