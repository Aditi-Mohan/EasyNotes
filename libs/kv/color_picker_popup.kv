
<ColorPickerPopup>:
    orientation: 'vertical'

    ColorPicker:
        id: clr_picker
        size_hint: 1.0, 0.9
            
        
    MDRaisedButton:
        id: select
        text: 'SELECT'
        md_bg_color: (51/255, 51/255, 61/255, 1)
        pos: (self.parent.size[0]/2)-(self.size[0]/2), 0
        on_release: root.select()