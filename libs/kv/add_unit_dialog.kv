<AddUnitDialog>:
    FloatLayout:

        MDTextField:
            id: unit_name
            hint_text: 'Unit Name'
            size_hint_x: 0.8           
            pos_hint: {'x': 0.1, 'y': 0.8}
        
        MDRoundFlatButton:
            id: done
            text: 'ADD'
            theme_text_color: "Custom"
            text_color: (51/255, 51/255, 61/255, 1)
            md_bg_color: 1, 1, 1, 0.5
            pos: (self.parent.size[0]/2), self.parent.size[0]*0.1
            on_release: root.finish()